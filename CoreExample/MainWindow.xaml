<Window x:Class="CoreExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cefSharp="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"        
        Title="MainWindow" Height="800" Width="1000">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <cefSharp:WebView x:Name="webView" Grid.Row="0" />
        <cefSharp:WebView x:Name="webView2" Grid.Row="1" />

        <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
            <Button Grid.RowSpan="2" Width="200" Height="50" Content="Activate Top Browser" Click="ActivateTop_Click" />
            <Button Grid.RowSpan="2" Width="200" Height="50" Content="Activate Bottom Browser" Click="ActivateBottom_Click" />
            <Button Grid.RowSpan="2" Width="200" Height="50" Content="Google" Click="Google_Click" />
        </StackPanel>
    </Grid>
    
</Window>
